  <h2 class="text-center">Project Dependencies</h2>

  <div class="details">
    <div class="container">
      <hr class="my-4">
      <div class="row">
        <div class="col">
          <% _.each( dependencies, function(dependency, index, list) { %>
          <div class="card">
            <div class="card-header">
              <a class="h3 mr-auto"
                href="https://www.npmjs.com/package/<%- dependency.title %>"><%- dependency.title %></a>
              <span class="small text-muted float-right"><%- dependency.version %></span>
            </div>
            <div class="card-body">

              <p class="card-text"><%- dependency.reason %></p>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

</div>